<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorLight</item>
    </style>


    <style name="AppTheme.EditTextStyle" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="AppTheme.TextViewStyle" parent="AppTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">12sp</item>
    </style>

    <style name="AppTheme.ButtonStyle" parent="AppTheme">
        <item name="android:layout_margin">24dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_width">120dp</item>
    </style>
</resources>
